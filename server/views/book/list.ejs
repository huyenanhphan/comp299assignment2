<%- include('../partials/header'); -%>
<%- include('../partials/main_nav'); -%>
<p>Welcome to Business Contacts</p>
<main class="container">
<div class="row">
    <div class="col-md-offset-3 col md-8">
        <h1>Business Contacts</h1>
        <%if(typeof displayName =='string' && displayName){%>
        <a href="/bookList/add" class="btn btn-primary" role="button">
            <i class ="fas fa-plus-circle"></i>Add a Contact</a>
            <%}%>
        <br>
        <table class = "table table-bordered table-striped table-hover">
            <tr>
                <th class="text-content col-2">Name</th>
                <th class="text-content col-2">Email</th>
                <th class="text-content col-1">Number</th>
                <%if(typeof displayName =='string' && displayName){%>
                <th class="text-content col-1"></th>
                <th class="text-content col-1"></th>
                <%}%>
                </tr>
           <% for(let count = 0; count<BookList.length; count++){ %>
            <tr>
                <td class = "text-center col-2"><%=BookList[count].name%></td>
                <td class = "text-center col-2"><%=BookList[count].email%></td>
                <td class = "text-center col-1"><%=BookList[count].number%></td>
                <%if(typeof displayName =='string' && displayName){%>
                <td class ="text-center col-1"><a href="/bookList/edit/<%=BookList[count]._id%>" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Update</a></td>
                <td class ="text-center col-1"><a href="/bookList/delete/<%=BookList[count]._id%>" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a></td>    
            <%}%>
            </tr>
                <%}%>
            </table>

        </div>
    </div>
    </main>
<%- include('../partials/bottom_nav'); -%>
<%- include('../partials/footer'); -%>