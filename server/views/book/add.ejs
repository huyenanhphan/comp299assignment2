<!--content for the Add page-->
<div class = "container">
    <div class = "row">
        <div class="offset-md-3 col-md-6">
        <h1>Add a Contact</h1>
        <form class = "form" method="POST">
                <div class ="form group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form control"
                    id="bookName"
                    placeholder="Enter the name"
                    name="name" required>
                </div>

                <div class ="form group">
                    <label for="authorTextField">Email</label>
                    <input type="text" class="form control"
                    id="bookEmail"
                    placeholder="Enter the contact email"
                    name="email" required>
                </div>

                <div class ="form group">
                    <label for="publishedTextField">Number</label>
                    <input type="number" class="form control"
                    id="bookNumber"
                    placeholder="Enter the contact number"
                    name="number" required>
                </div>

                <button class = "btn btn-primary" type="submit"><i class = "fas fa-edit"></i>submit</button>
                <a href="/bookList" class="btn btn-warning"><i class="fas fa-undo"></i>cancel</a> 
            
        </form>
        </div>
        </div>
    </div>

